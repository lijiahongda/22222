page{
  background-color: #fff;
}
/* 授权按钮 */
.authorizationStatus{
  position: fixed;
  z-index: 10000;
  width: 100%;
  height: 100%;
  background-color: transparent;
  top: 0rpx;
  margin-top: 0rpx
}
.AllCategories{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width:95%;
  padding-left:2.5%;
  padding-right:2.5%;
  margin-top:-5rpx;
  padding-bottom: 25rpx;
}
.AllItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width:23%;
  margin-left:1%;
  margin-right:1%;
  margin-bottom:26rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.siku .AllItem image{
  width:158rpx;
  height:236rpx;
}
.bgImg{
  width: 100%;
}
.bgImg image{
  width: 100%;
}
.wangyi .AllItem{
  width: 330rpx;
  height: 310rpx;
  border: none;
  display: block;
  margin-left:1.5%;
  margin-right:1.5%;
}
.wangyi .AllItem image{
  width: 100%;
  height: 100%;
}
.AllCategories{
  margin-top: -10rpx;
}