/* page/Yuemall//pages/PinHome/PinHome.wxss */

.toppbars {
  width: 100%;
  height: 80rpx;
  background-color: #E03024;
}


.arrow-box {
  width: 10%;
  height: 100%;
  /* background-color: #fe6969; */
  float: left;
}

.arrow-box image {
  width: 14px;
  height: 16px;
  transform: rotateY(180deg);
}

.input-box {
  width: 70%;
  height: 100%;
  /* background-color: #eee; */
  justify-content: center;
  align-items: center;
  float: left;
  margin-left: 3%;
}

.input-box text {
  font-size: 30rpx;
  color: #fff;
  width: 93%;
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pinHome_search {
  display: flex;
  align-items: center;
  color:#C7C7C7;
  background:rgba(255, 255, 255, 1);
  width: 90.6%;
  margin:0 auto;
  padding:11rpx 15rpx;
border-radius:34rpx;
}

.pinHome_search image {
  width: 14px;
  height: 16px;
  margin-left: 15rpx;
}

.top-comend {
  width: 100%;
  height: 50px;
}
.banner{
  background: url('https://yuetao-1300766538.cos.ap-beijing.myqcloud.com/yuetao/image/2020-02-23/14/yuelvhuiQXxsKFIqz01582440972.png') no-repeat;
  background-size: 100% 45%;
  height: 264rpx;
}
.banner image {
  height: 264rpx;
  width: 93.6%;
  margin-left: 3.2%;
  margin-top: 10rpx

}

.pinHome_nav {
  width: 100%;
  box-sizing: border-box;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
  background: #fff;
  margin-top: 20rpx;
}

.scroll-view-item_H {
  display: inline-block;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  margin: 23rpx auto;
  position: relative;
  padding-left: 23rpx;
  width: 13%;
}

.active {
  color: #000;
}

.scroll-view-item_H_tab {
  width: 40rpx;
  height: 7rpx;
  background: #000;
  margin-left: 10rpx;
  position: absolute;
  bottom: -25rpx;
}

.pinHome_list {
  width: 93.6%;
  padding: 0 3.2%;
}

.pinHome_lister {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 10rpx;
}

.pinHome_lister_image image {
  width: 244rpx;
  height: 244rpx;
  border-radius: 10rpx;
  margin: 10rpx 0;
  margin-left: 10rpx;
}

.pinHome_text {
  margin: 10rpx 0;
  margin-left: 20rpx;
  width: 56%;
}

.pinHome_text_title {
  /* width: 297rpx; */
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  vertical-align: middle;
}

.pinHome_text_title_image  {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}

.pinHome_text_title_text {
  width: 316rpx;
  font-size: 28rpx;
  font-family: PingFang;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}

.pinHome_text_title_share {
  display: flex;
  align-items: flex-end;
}

.pinHome_text_title_share image {
  width: 67rpx;
  height: 35rpx;
  background: rgba(240, 241, 245, 1);
  border-radius: 10rpx;
}

.pinHome_text_disnycs {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pinHome_disnysc_money {
  margin-top: 20rpx;
  color: #da341a;
}

.disnysc {
  margin-top: 20rpx;
  width:136rpx;
  height: 28rpx;
  background:url('https://yuetao-1300766538.cos.ap-beijing.myqcloud.com/yuetao/image/2020-02-23/13/yuelvhuiHknJ4n6IIQ1582435354.png') no-repeat;
  background-size: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
font-size:22rpx;
font-family:PingFang;
font-weight:500;
color:rgba(255,255,255,1);
}

.pinHome_disnycs {
  border: 1px solid rgba(255, 0, 0, 1);
  opacity: 0.76;
  border-radius: 5rpx;
  padding: 5rpx 12rpx;
  font-size: 22rpx;
  font-family: PingFang;
  font-weight: 500;
  color: rgba(255, 122, 101, 1);
}

.money_icon {
  font-size: 36rpx;
}

.money {
  font-size: 26rpx;
}

.shoping {
  font-size: 24rpx;
}

.pinHome_text_disnycs_right {
  width: 70rpx;
  height: 70rpx;
  background: rgba(255, 0, 0, 1);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pinHome_text_disnycs_right text {
  font-size: 36rpx;
  font-family: PingFang;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.shareMoney {
  display: flex;
  justify-content: flex-end;
}

.shares {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 16rpx;
  width: 297rpx;
  height: 38rpx;
  background: rgba(249, 157, 125, 1);
  opacity: 0.38;
  border-radius: 19rpx;
  font-size: 24rpx;
  font-family: PingFang;
  font-weight: 500;
  color: rgba(255, 65, 0, 1);
}

.shareMoney image {
  width: 10rpx;
  height: 18rpx;
  margin-left: 15rpx;
}
