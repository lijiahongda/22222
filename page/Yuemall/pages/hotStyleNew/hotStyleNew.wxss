.tabTop{
  position: fixed;
  top: -20rpx;
  left: 0;
  z-index: 1;
  background: #fff;
}
.list .goBuyDetail{
  width: 114rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  color: #DA341A;
  font-size: 26rpx;
  border: 2rpx solid rgba(228,49,31,.5);
  border-radius: 28rpx;
  box-sizing: border-box;
}
.list .top{
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #fff;
  line-height: 30rpx;
}
.list .top > view:nth-child(2){
  font-size: 18rpx;
  line-height: 20rpx;
}
.more{
  width: 100%;
  text-align: center;
  padding: 60rpx;
  box-sizing: border-box;
  color: #666;
  font-size: 24rpx;
}