/* page/Yuemall//pages/SuccessfulComments/SuccessfulComments.wxss */

.top {
  width: 100%;
  height: 310rpx;
  margin-bottom: 45rpx;
}

.tips {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(30, 30, 30, 1);
  margin-bottom: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.list {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  width: 90%;
  padding-left: 5%;
  padding-right: 5%;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  margin-bottom: 20rpx;
}

.list image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 61rpx;
  background-color: #ccc;
}

.list .info {
  display: flex;
  flex-direction: column;
  width: 63%;
  align-items: flex-end
}

.list .info .title text {
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 54rpx;
}

.list .info .comment {
  width: 110rpx;
  height: 52rpx;
  border: 1px solid rgba(255, 88, 0, 1);
  border-radius: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(239, 37, 15, 1);
}
