/* page/Yuemall//pages/RefundApply/RefundApply.wxss */
.borderBottom{
  margin-top:20rpx;
  background: #fff;
}
.ItemRight {
  display: flex;
  width: 92%;
  padding-left: 4%;
  padding-right: 4%;
  padding-top: 56rpx;
  flex-direction: row;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  padding-bottom: 10rpx;
}

.Specifications {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(128, 128, 128, 1);
  margin-bottom: 22rpx;
}
.ItemRight .image {
  margin-right: 3.4%;
  width: 24.9%;
}

.checkbox {
  margin-left: 40rpx;
  margin-right: 30rpx;
}

.ItemRight .image image {
  width: 100%;
  height: 187rpx;
}

.describe {
  display: flex;
  flex-direction: column;
  width: 71%;
}

.describe .title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  margin-bottom: 17rpx;
}

.describe .title text {
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.describe .price {
  font-size: 30rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(0, 0, 0, 1);
  margin-bottom: 26rpx;
}

.describe .price text {
  font-size: 20rpx;
}
.border_applys{
  display: flex;
  padding: 0 25rpx;
  font-size:28rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(20,20,20,1);
justify-content: space-between
}
.borderBottom_text_title{
  padding-top: 19rpx;
}
.borderBottom_text_detail{
  padding:20rpx 0;
  font-size:24rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(153,153,153,1);
}
.borderBottom_image image{
  width:14rpx;
  height: 26rpx;
}

.borderBottom_image{
display: flex;
  align-items: center
}