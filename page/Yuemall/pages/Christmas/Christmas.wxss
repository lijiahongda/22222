/* page/Channel/Index/index.wxss */
@import "/page/LoadingPopup/LoadingPopup.wxss";

page{
  background: #fff;
}

/* 小红包 */

.SmallRedPopup {
  width: 83rpx;
  height: 79rpx;
  position: fixed;
  right: 24rpx;
  z-index: 10000;
  top: 779rpx;
}

.header .top{
  width: 100%;
  height: 476rpx;
}
.header .join{
  width: 100%;
  height: 220rpx;
}


/* sections */

.section {
  background: #fff;
  padding-top: 21rpx;
  padding-left: 21rpx;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}
.section .title {
  font-weight: 500;
}
.section .title .santa_claus{
  width: 44rpx;
  height: 52rpx;
  margin-right: 12rpx;
}
.section .title .title_two{
  font-size: 24rpx;
  color: #999999;
  margin-left: 12rpx;
  font-weight: normal;
}

.section .items {
  display: flex;
  justify-content: space-between;
  margin-top: 22rpx;
  box-sizing: border-box;
  white-space: nowrap;
  flex-direction: row;
}


.section .items .item .img{
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}
.section .items .item .img image {
  width: 180rpx;
  height: 180rpx;
}
.section .items .item .num{
  width:78rpx;
  height:36rpx;
  line-height: 36rpx;
  background:rgba(0,0,0,0.24);
  border-radius:12rpx 0px 12rpx 0px;
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 20rpx;
  color: #FFFFFF;
  text-align: center;
}
.section .item {
  width: 180rpx;
  display: inline-block;
  margin-right: 30rpx;
  overflow: hidden;
}
.section .item .title {
  color: #343434;
  font-weight: bold;
  font-size: 26rpx;
  width: 180rpx;
  margin: 10rpx 0;
  height: 30rpx;
  word-break: break-all;
  text-align: center;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}

.section .introduce {
  color: #999;
  font-size: 24rpx;
  margin-bottom: 5rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.section .price {
  color: #D71A21;
  font-weight: 500;
  font-size: 26rpx;
}

scroll-view {
  display: block;
  width: 100%;
}

.hotel .items {
  box-sizing: border-box;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
}

.hotel .items image {
  width:264rpx;
  height:264rpx;
  background:rgba(222,222,222,1);
  border-radius:12rpx;
}
.hotel .item {
  display: inline-block;
  margin-right: 30rpx;
  width: 264rpx;
  border-radius: 8rpx;
}
.hotel .item .title{
  text-align: left;
}
.hotel .item .introduce,.hotel .item .price{
  display: block;
}
/* .hotel .item .introduce{
  display: block;
  
} */
.section.hotel .image {
  width: 273rpx;
  height: 326rpx;
  border-radius: 10rpx;
  background: #ccc;
}

.section.hotel .info {
  position: absolute;
  color: #fff;
  top: 14rpx;
  left: 14rpx;
}

.section.hotel .info .location {
  font-size: 20rpx;
  padding-left: 20rpx;
}

.section.hotel .info .hotel_name {
  font-size: 16rpx;
}

.section.hotel .info .location::before {
  content: '';
  display: inline-block;
  position: absolute;
  top: 2rpx;
  left: 0;
  width: 15rpx;
  height: 20rpx;
  background: url(https://image.yuelvhui.com/pubfile/2019/11/07/line_1573136199_28659.png) no-repeat center;
  background-size: contain;
}

.section.hotel .info .location {
  position: relative;
}

/* 
  跟我嗨 瀑布流
*/
.flow{
  display: flex;
  flex-direction: row;
}
.flow-list-item{
  margin-bottom: 12rpx;
  background: #fff;
  width:366rpx;
  background:#fff;
  border-radius:6rpx;
  overflow: hidden;
}
.flow-list{
  width: 366rpx;
  column-count: 1;
  margin: 0 6rpx;
}
.flow-list:nth-child(2n){
  margin: 0;
  margin-right: 6rpx;
}
.high,.short{
  position: relative;
}
.flow-list-item .con-img{
  width: 366rpx;
  height:450rpx;
  position: relative;
  overflow: hidden;
}
.flow-list-item .con-img .img{
  width: 366rpx;
  height:450rpx;
}
.short .img{
  height:406rpx;
}
.flow-list-item .play{
  width:74rpx;
  height:74rpx;
  margin: 0 auto;
  position: absolute;
  left: 136rpx;
  top: 196rpx;
  z-index: 99;
}
.short .article{
  width:52rpx;
  height:44rpx;
  position: absolute;
  right: 18rpx;
  top: 18rpx;
  left: auto;
  margin: 0 auto;
  z-index: 99;
}

.product-name{
  font-size:26rpx;
  line-height:30rpx;
  color:#333;
  padding: 0 16rpx;
  box-sizing: border-box;
  padding-top: 16rpx;
  background: #fff;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-weight: bold;
}


/* 发布人信息 */
.flow-list .person{
  display: flex;
  width: 366rpx;
  padding: 16rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  /* border-radius:0 0 10rpx 10rpx; */
}
.person .person-con{
  display: flex;
  align-items: center;
}
.person .person-img{
  width:40rpx;
  height:40rpx;
  border-radius:50%;
  box-shadow:0rpx 0rpx 6rpx 0rpx rgba(0, 0, 0, 0.06);
  margin-right: 8rpx;
}
.person .person-name{
  font-size: 24rpx;
  color: #666;
  width: 200rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.person .islike{
  display: flex;
  align-items: center;
  justify-content: right;
  color: #999;
  font-size: 22rpx;
}
.person .islike image{
  width: 22rpx;
  height: 18rpx;
  margin-right: 8rpx;
}