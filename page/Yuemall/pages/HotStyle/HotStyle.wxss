.openingMember{
  width: 300rpx;
  height: 74rpx;
  border-radius: 37rpx;
  overflow: hidden;
  display: block;
  position: absolute;
  top: 600rpx;
  left: 29%;
  /* margin: 0 auto 80rpx; */
