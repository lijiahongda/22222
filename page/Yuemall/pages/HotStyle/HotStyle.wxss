}
.openingMember image{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.itemList{
  width: 100%;
  padding: 0 4%;
  box-sizing: border-box;
  position: relative;
}
.Coupon {
  padding-left: 10rpx;
  padding-right: 10rpx;
  height: 109rpx;
  background-color: #f1cc73;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  right: 0rpx;
  bottom: 9rpx;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
  line-height: 52rpx;
}
.itemList .item{
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 1px #ccc;
  margin-bottom: 25rpx;
  overflow: hidden;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  position: relative;
  box-sizing: border-box;
}
.itemList .item .itemimg{
  width: 200rpx;
  height: 200rpx;
  background-color: #f4f4f4;
  border-radius: 0 10rpx 10rpx 0;
  overflow: hidden;
  box-sizing: border-box;
}
.itemList .item .itemimg image{
  width: 100%;
  height: 100%;
}
.itemList .item .itemCont{
  height: 100%;
  padding: 20rpx 20rpx 0 0;
  box-sizing: border-box;
  padding-left: 10rpx;
  box-sizing: border-box;
  flex: 1;
}
.itemList .item .itemCont .itemtitle{
  font-size: 24rpx;
  color: #000;
  margin-bottom: 15rpx;
  word-break:break-all;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
  text-overflow:ellipsis;
  box-sizing: border-box;
}
.itemList .item .itemCont .itemMemberPrice{
  position: absolute;
  left: 210rpx;
  bottom: 60rpx;
  box-sizing: border-box;
}
.itemList .item .itemCont .memberPrice{
  font-size: 24rpx;
  color: #F75896FF;
  box-sizing: border-box;
}
.itemList .item .itemCont .originalPrice{
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #333;
  /* text-decoration:line-through; */
  box-sizing: border-box;
}
.itemList .item .itemCont .itemPrice{
  font-size: 24rpx;
  color: #FF6032;
  border: 1px solid #FF6032;
  display: inline-block;
  padding: 2rpx 2rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  margin-right: 10rpx;
}
