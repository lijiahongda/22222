/* 普通物流 */

.GeneralLogistics {
  height: 163rpx;
  background-color: #fff;
  padding-left: 4%;
  width: 92%;
  padding-right: 4%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 20rpx;
  line-height: 61rpx;
  margin-bottom: 20rpx;
}

.GeneralLogistics .item {
  color: #333;
  font-size: 28rpx;
}

.LogisticInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  width: 96%;
  padding-left: 4%;
}

.LogisticInfo .spot {
  width: 5%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.LogisticInfo .listAll {
  display: flex;
  flex-direction: column;
  width: 96%;
  padding-right: 4%;
  /* margin-left: 5%; */
}

.LogisticInfo .list {
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  width: 100%;
  border-bottom: 1px solid #ededed;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.LogisticInfo .list .title {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.LogisticInfo .list .time {
  color: #999;
  font-size: 24rpx;
}
