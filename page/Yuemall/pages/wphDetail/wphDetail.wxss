page{
  padding-bottom: 146rpx;
}
.swiper{
  width: 100%;
  height: 750rpx;
  position: relative;
}
.swiper image{
  width: 100%;
  height: 100%;
}
.salesBox{
  position: absolute;
  right: 24rpx;
  bottom: 10rpx;
  background:rgba(0,0,0,1);
  padding: 8rpx;
  text-align: center;
  color: #fff;
  font-size:24rpx;
  border-radius:8rpx;
}
