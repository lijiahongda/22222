page{
  background: #F6F6F6
}
.tips{
  background: #F25B56;
  width:750rpx;
  padding: 32rpx 24rpx;
  box-sizing: border-box;
  color: #fff;
}
.tips .title{
  font-size: 36rpx;
  line-height: 36rpx;
}
.tips .time,.tips .info{
  font-size: 26rpx;
  margin-top: 24rpx;
  line-height: 26rpx;
  margin-bottom: 24rpx;
}
.tips .info{
  margin: 0;
}


.orderstatus{
  height:170rpx;
  width:750rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: relative
}
.orderstatus .state{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  line-height: 26rpx;
}
.orderstatus .state image{
  width:20rpx;
  height:20rpx;
  margin-bottom: 26rpx;
  margin-top: 8rpx;
}
.orderstatus .line_green,.orderstatus .line_gray{
  width: 280rpx;
  height: 2rpx;
  background: #0CBF36;
  position: absolute;
  top: 64rpx;
  left: 96rpx;
  z-index: -1;
}
.orderstatus .line_gray{
  right: 80rpx;
  left: auto;
  background: #929292;
}



.logInfo,.price,.after_sale{
  font-size: 26rpx;
  color: #333333;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.price{
  background: #F6F6F6;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 50rpx;
  color: #999;
}
.after_sale{
  margin-top: 10rpx;
}

.goodinfo{
  height: 170rpx;
  background-color: #F6F6F6;
  display: flex;
  align-items: flex-start;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  font-size: 26rpx;
  color: #333;
}
.goodinfo .image{
  width: 130rpx;
  height: 130rpx;
  border-radius: 10rpx;
  margin-right: 20rpx
}
.goodinfo .name{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  width: 460rpx;
}
.goodinfo .goodprice{
  width: 100rpx;
  text-align: right;
}



.orderInfo {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  width: 92%;
  padding: 28rpx 4%;
  font-size: 24rpx;
  color: #999;
  line-height: 40rpx;
  border-bottom: 1rpx solid #f6f6f6;
}

.orderInfo .payList{
  display: flex;
  align-items: center;
  line-height: 40rpx;
}
.orderInfo .payList .copy{
  width:70rpx;
  height:28rpx;
  border:1rpx solid rgba(153,153,153,1);
  border-radius:6rpx;
  text-align: center;
  line-height: 28rpx;
  font-size: 20rpx;
  color: #999999;
  margin-left: 20rpx;
}