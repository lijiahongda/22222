/* page/Mall/pages/BargainPriceList/BargainPriceList.wxss */

/* 轮播 */

page {
  background-color: #f4f4f4;
}

.bg {
  width: 100%;
  height: 224rpx;
}

.swiper-box {
  width: 93.6%;
  margin-left: 3.2%;
  height: 250rpx;
  margin-top: -179rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.swiper-box image {
  width: 100%;
  height: 250rpx;
  display: block;
  border-radius: 20rpx;
}

/* 授权按钮 */

.authorizationStatus {
  position: fixed;
  z-index: 10000;
  width: 100%;
  height: 100%;
  background-color: transparent;
  top: 0rpx;
  margin-top: 0rpx;
}

.goodInfo {
  width: 44.3%;
  border-radius: 24rpx;
  padding-left: 2%;
  padding-right: 2%;
  margin-bottom: 22rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 604rpx;
  position: relative;
  margin-top: 20rpx
}

.goodInfo image {
  width: 310rpx;
  height: 310rpx;
  margin-bottom: 20rpx;
}

.goodInfo .info {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.goodInfo .info .title text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 55rpx;
  height: 73rpx;
}

.goodInfo .info .groupInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
  margin-bottom: 23rpx;
}

.goodInfo .info .groupInfo .title {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
}

.goodInfo .info .groupInfo .price {
  font-size: 35rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(253, 75, 21, 1);
}

.goodInfo .info .groupInfo .price text {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(253, 75, 21, 1);
}

.goodInfo .info .OriginalPrice {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  text-decoration: line-through;
  color: rgba(153, 153, 153, 1);
}

.goodInfo .InitiateBargain {
  width: 310rpx;
  height: 60rpx;
  background: rgba(254, 75, 21, 1);
  border-radius: 30px;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  bottom: -22rpx;
  position: absolute;
  left:0;
  right: 0;
  margin: auto;
}

.content {
  padding-left: 3%;
  padding-right: 3%;
  width: 94%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-bottom: 20rpx
}

.isHaveMore {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 40rpx;
  margin-bottom: 95rpx;
}