<import src="../colorLine/colorLine.wxml" />
<view class="balance">
  <scroll-view scroll-y>
    <view>
      <view class="userInfo" bindtap='addressAdministration' wx:if="{{address == null}}">
        <view class="userInfoContent">
          <view class="info">
            <view class="name">
              <text>{{receiverName}}</text>
            </view>
            <view class="phone">{{mobile}}</view>
          </view>
          <view class="location">
            <view class="defaultContent" wx:if="{{isDefault == 1}}">
              <view class="default">默认</view>
            </view>
            <view class="defaultContent" wx:else></view>
            <view class="site">
              <view class="address">暂无收货地址</view>
              <view class="image">
                <image src="/images/YueMall/roow.png"></image>
              </view>
            </view>
          </view>
        </view>
      </view>
      <view class="userInfo" wx:else bindtap='addressAdministration'>
        <view class="userInfoContent">
          <view class="info">
          <view class="image">
              <image src="https://image.yuelvhui.com/pubfile/2019/06/12/line_1560337853.png"></image>
            </view>
            <view class="name">
              <text>{{receiverName}}</text>
            </view>
            <view class="phone">{{mobile}}</view>
          </view>
          <view class="location">
            <view class="defaultContent" wx:if="{{isDefault == 1}}">
              <view class="default">默认</view>
            </view>
            <view class="defaultContent" wx:else></view>
            <view class="site">
              <view class="address">{{address}}</view>
              <view class="image">
                <image src="/images/YueMall/roow.png"></image>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <template is="colorLine" />
