page{
  background: rgba(246,246,246,1);
}
.header{
  width: 100%;
  background: #fff;
  border-radius:0px 0px 10rpx 10rpx;
}
.sort{
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 100rpx;
}
.sort .list{
  text-align: center;
  padding: 26rpx 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  line-height: 28rpx;
  border-bottom: 4rpx solid #fff;
  display: flex;
  align-items: center;
}
.sort .list.active{
  border-bottom: 4rpx solid #FA937E;
}
.sort .price-icon image{
  width: 16rpx;
  height: 8rpx;
  margin-left: 12rpx;
  display: block;
}
.sort .price-icon .price-up{
  margin-bottom: 8rpx;
}
.sort .list.screen image{
  margin-left: 8rpx;
  width: 28rpx;
  height: 28rpx;
}

/* --------------- */
/* 横 */
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content .item {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  width: 702rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  position: relative;
}

.content .item .image {
  width: 260rpx;
  height: 260rpx;
  margin-right: 20rpx;
  position: relative;
}
.content .item .image .Ranking{
  position: absolute;
  right: 0;
  top: 10rpx;
  background: #B94D46;
  font-size:24rpx;
  color: #fff;
  height: 36rpx;
  line-height: 36rpx;
  padding: 0 22rpx;
  border-radius:18rpx 0px 0px 18rpx;
}

.content .item .image image {
  width: 260rpx;
  height: 260rpx;
  background-color: #ececec;
}

.content .item .info {
  display: flex;
  flex-direction: column;
}

.content .item .info .title text {
  margin-top: 16rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 50rpx;
}


.content .item .info .Surplus {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999;
  margin-top: 26rpx;
  margin-bottom: 10rpx;
}

.content .item .info .pricebutton {
  display: flex;
  flex-direction: row;
  color: #999;
  font-size: 24rpx;
  justify-content: space-between;
}

.content .item .info .pricebutton .price .Company {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #B94D46;
}

.content .item .info .pricebutton .price text {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #B94D46;
}

.content .item .info .pricebutton .price .OriginalPrice {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  text-decoration: line-through;
  color: #666666;
  margin-left: 20rpx;
}

/* 暂无商品 */
.NoCommodityData{
  width: 100%;
  padding-top: 150rpx;
  text-align: center;
  font-size: 24rpx;
  color: #B3B3B3
}
.NoCommodityData image{
  width: 172rpx;
  height: 166rpx;
  margin-bottom: 44rpx;
}


/* 筛选弹框 */
.black-grd{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.2);
  z-index: 1
}
.screen-shell,.screen-con{
  position: fixed;
  top: 0;
  right: 0;
  width: 538rpx;
  height: 100%;
  background: #fff;
  border-radius: 10rpx 0 0 10rpx;
  z-index: 9;
  padding: 30rpx 24rpx 0 12rpx;
  box-sizing: border-box;
}
.screen-con{
  overflow-y: auto;
  height: 90%;
  border-radius:0;
}
.screen-type .title{
  display: flex;
  align-content: center;
  justify-content: space-between;
  font-size: 30rpx;
  color: #333;
  line-height: 30rpx;
  margin-bottom: 32rpx;
}
.screen-type .title image{
  width: 24rpx;
  height: 14rpx;
  margin-top: 8rpx;
}
.screen-type .screen-list{
  display: flex;
  align-items: center;
  flex-wrap: wrap
}
.screen-type .screen-list view,.screen-type .price-input input{
  /* width: 138rpx; */
  /* padding: 0 10rpx; */
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 24rpx;
  background: rgba(235,235,235,1);
  font-size: 24rpx;
  color: #999;
  margin-right: 40rpx;
  margin-bottom: 32rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.screen-type .screen-list view.chose{
  background: rgba(185,77,70,1);
  color: #fff;
}
.screen-type .price-input{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 42rpx;
}
.screen-type .price-input input{
  width: 212rpx;
  margin: 0;
}
.screen-type .price-input .line{
  width: 40rpx;
  height:3rpx;
  background: rgba(153,153,153,1);
}
.screen-btn{
  position: fixed;
  bottom: 0;
  right: 0;
  display: flex;
  align-items: center;
  width: 538rpx;
  height: 10%;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.screen-btn view{
  width:212rpx;
  height:74rpx;
  line-height: 74rpx;
  text-align: center;
  border-radius:10rpx;
  font-size: 30rpx;
}
.screen-btn view.reset{
  border:2rpx solid rgba(235,235,235,1);
  background: #fff;
  color: #333;
  margin-right: 32rpx;
  margin-left: 40rpx;
}
.screen-btn view.sure{
  background:rgba(185,77,70,1);
  border: none;
  color: #fff;
}
