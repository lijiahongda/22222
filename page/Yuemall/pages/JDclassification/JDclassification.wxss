/* page/Yuemall/pages/JDclassification/JDclassification.wxss */
@import "/page/LoadingPopup/LoadingPopup.wxss";
page {
  background-color: #ececec;
}

/* 授权按钮 */

.authorizationStatus {
  position: fixed;
  z-index: 10000;
  width: 100%;
  height: 100%;
  background-color: transparent;
  top: 0rpx;
  margin-top: 0rpx;
}

.classification {
  width: 100%;
  background-color: #ececec;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 100%;
}

.ClassA {
  width: 20.8%;
  height: 100%;
  background-color: #eee;
}

.ClassA .title {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  height: 80rpx;
  width: 146rpx;
  align-items: center;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  background-color: #f1f1f1;
}

.ClassA .title.active {
  background-color: #fff;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333;
}

.ClassA .title .border {
  width: 3rpx;
  background-color: #BA4C44;
  height: 20rpx;
  display: flex;
}

.ClassA .title .name {
  width: 95%;
  text-align: center;
  color: #787878;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
}

.ClassA .title.active:after {
  background-color: #ececec;
}

.secondLevel {
  width: 79.2%;
  background-color: white;
}

.secondLevel .secondLevelItem {
  background-color: #fff;
  width: 96%;
  padding-left: 2%;
  padding-right: 2%;
  padding-top: 22rpx;
}

.secondLevel .border {
  width: 96%;
  padding-left: 2%;
  padding-right: 2%;
  height: 13rpx;
  background-color: #f6f6f6;
}

.secondLevel .secondLevelItem .title {
  color: #333;
  font-size: 30rpx;
  margin-left: 5%;
  margin-right: 5%;
  margin-bottom: 22rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.secondLevel .secondLevelItem .title .time {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(104, 104, 104, 1);
}

.secondLevel .secondLevelItem .ification {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-bottom: 11rpx
}

.secondLevel .secondLevelItem .ification .item {
  width: 33%;
  display: flex;
  flex-direction: column;
  color: #333;
  font-size: 26rpx;
  align-items: center;
  justify-content: center;
  padding-bottom: 31rpx;
}

.secondLevel .secondLevelItem .ification .item text {
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 78rpx;
}

.secondLevel .secondLevelItem .ification .item image {
  height: 124rpx;
  width: 124rpx;
  margin-bottom: 12rpx;
}

.searchVessel {
  background-color: #fff;
  padding-bottom: 12rpx;
  padding-top: 12rpx;
}

.search {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 82%;
  margin: auto;
  background-color: #eee;
  height: 60rpx;
  border-radius: 34rpx;
  color: #ccc;
  font-size: 28rpx;
}

.search image {
  width: 28rpx;
  height: 28rpx;
  margin-left: 30rpx;
  margin-right: 29rpx;
}

/* 加载中 */

.commodity_screenlong {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1200;
  color: #fff;
}

.commodity_attr_boxlong {
  width: 100%;
  overflow: hidden;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2000;
  padding-top: 20rpx;
  height: 79%;
}

.commodity_attr_box_house {
  width: 100%;
  overflow: hidden;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2000;
  padding-top: 20rpx;
  max-height: 1084rpx;
  min-height: 800rpx;
  background-color: #fff;
}

.commodity_attr_box_house .button {
  display: flex;
  flex-direction: row;
  height: 90rpx;
  bottom: 0;
  position: fixed;
  width: 100%;
}

.commodity_attr_box_house .button .OnlinePayment {
  width: 57%;
  height: 90rpx;
  color: #333;
  font-size: 34rpx;
  text-align: center;
  line-height: 90rpx;
  background-color: #fff;
}

.commodity_attr_box_house .button .Reserve {
  width: 43%;
  height: 90rpx;
  background-color: #ff6636;
  color: #f2f3f5;
  font-size: 32rpx;
  text-align: center;
  line-height: 90rpx;
}

.banner {
  width: 570rpx;
  height: 170rpx;
  background-color: #f43a27;
  border-radius: 10rpx;
  margin-left: 12rpx;
  margin-bottom: 32rpx;
}

.total {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(238, 57, 39, 1);
  margin-bottom: 44rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
