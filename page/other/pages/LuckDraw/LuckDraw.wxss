}

.swiper_container {
  position: absolute;
  top: 120rpx;
  width: 100%;
  height: 350rpx;
  overflow: hidden;
}
.swiper_container .itemList{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  position: absolute;
  left: 0;
  top: 0;
  transition: 1s ease;
}

.swiper_container .itemList .item {
  height: 115rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid #DFA344FF;
}
.swiper_container .itemList .item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.swiper_container .itemList .item .avatar image{
  width: 100%;
  height: 100%;
}
.swiper_container .itemList .item .itemCont{
  flex: 1;
  color:#BE5923FF;
  height: 80rpx;
  padding-left: 20rpx;
  position: relative;
  box-sizing: border-box;
  font-size: 30rpx;
}
.swiper_container .itemList .item .itemCont .result_name{
  font-size: 28rpx;
}
.swiper_container .itemList .item .itemCont .time{
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  color: #BE5923FF;
}

.success_recordList {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
