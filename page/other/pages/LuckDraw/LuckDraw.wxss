  position: relative;
}

.WinningPrize_box .image image {
  height: 376rpx;
  width: 506rpx;
  margin: 25% auto;
}

.WinningPrize_box .tip {
  position: absolute;
  color: #fff;
  font-size: 40rpx;
  top: 350rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.WinningPrize_box .TermValidity {
  font-size: 24rpx;
  margin-top: 15rpx;
  margin-bottom: 20rpx;
}

.WinningPrize_box .ToInvite {
  text-align: center;
  line-height: 88rpx;
  width: 248rpx;
  height: 64rpx;
  border-radius: 40rpx;
  color: #fff;
  font-size: 36rpx;
}

button[class="con_listbox"]::after {
  border: none;
}

.WinningPrize_box .close {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1px solid #fff;
  line-height: 80rpx;
  text-align: center;
  margin-top: 80rpx;
}

