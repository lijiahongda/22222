/* 弹窗 中奖*/

.WinningPrize {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1200;
  color: #fff;
}

.WinningPrize_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2000;
  padding-top: 20rpx;
  height: 100%;
  top: 100rpx;
}

.WinningPrize_box .image {
  display: flex;
  flex-direction: row;
  justify-content: center;
  /* align-items: center; */
