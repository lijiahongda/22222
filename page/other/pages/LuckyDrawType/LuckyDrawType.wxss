/* page/other/pages/LuckyDrawType/Lucky drawType.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #E74435;
}
.wrap{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}
.wrap .bgimg{
  width: 100%;
  height: 100%;
}
.wrap .content{
  position: absolute;
  left: 4%;
  top: 493rpx;
  width: 92%;
  height: 100%;
  border-radius: 10rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  align-items: center;
}
.wrap .content .resultTitle{
  height: 60rpx;
  line-height: 60rpx;
  text-align: left;
  color: #fff;
  display: block;
  width: 100%;
}
.wrap .winningInformation{
  width: 100%;
  height: 310rpx;
  background-color: #fff;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 45rpx;
}
.wrap .winningInformation .itemList{
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  overflow: hidden;
  transition: 1s ease;
  padding-top: 10rpx;
  box-sizing: border-box;
}
.wrap .winningInformation .itemList .item{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 10rpx;
  color: #F34538FF;
  text-align: center;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.wrap .winningInformation .itemList .item text{
  font-size: 26rpx;
  color: #F34538FF;
  height: 100%;
  display: block;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap
}
.wrap .winningInformation .itemList .item .text1{
  width: 40%;
  text-align: left;
}
.wrap .winningInformation .itemList .item .text2{
  width: 40%;
  text-align: center;
}
.wrap .winningInformation .itemList .item .text3{
  width: 30%;
  padding-left: 20rpx;
}
.wrap .content .code{
  width: 420rpx;
  height: 78rpx;
  border-radius: 49rpx;
  background-color: rgba(255,218,163,1);
  font-size: 36rpx;
  color: #F34538FF;
  text-align: center;
  line-height: 78rpx;
  margin-top: 50rpx;
  box-shadow: 0 0 1px 1px #ccc;
  margin-bottom: 50rpx;
}
.wrap .content .rule{
  color: #fff;
  font-size: 30rpx;
}