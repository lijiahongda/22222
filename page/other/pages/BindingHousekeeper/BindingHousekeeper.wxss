.commodity_screenshowModal {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.FriendsBargain {
  position: fixed;
  top: 0rpx;
  height: 100%;
  width: 100%;
  z-index: 10000;
}

.FriendsBargain image {
  width: 628rpx;
  height: 759rpx;
  position: relative;
}

.FriendsBargain .BargainInfor {
  position: absolute;
  top: 217rpx;
  border-radius: 10rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  width: 68%;
  left: 16%;
  align-items: center;
  justify-content: center;
  padding-top: 47rpx;
  background-color: #fff;
}

.FriendsBargain .BargainInfor image {
  width: 124rpx;
  height: 124rpx;
  background-color: #ccc;
  border-radius: 50%;
  margin-bottom: 39rpx;
  margin-top: 39rpx;
}

.FriendsBargain .BargainInfor .AlreadyBargain {
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 67rpx;
  margin-bottom: 40rpx;
}

.FriendsBargain .BargainInfor .tips {
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.FriendsBargain .BargainInfor .tips .text {
  color: #fabf3f;
}

.FriendsBargain .BargainInfor .ClickCollect {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.FriendsBargain .BargainInfor .ClickCollect view {
  border-top: 1px solid #dfdfdf;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.Remarks {
  position: fixed;
  bottom: 43rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
