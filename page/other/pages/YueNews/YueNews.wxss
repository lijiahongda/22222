page {
  background-color: #fff;
}

.scrollView {
  height: 100%;
  -webkit-overflow-scrolling: touch;
  position: static;
}

/* 授权按钮 */

.authorizationStatus {
  position: fixed;
  z-index: 10000;
  width: 100%;
  height: 100%;
  background-color: transparent;
  top: 0rpx;
  margin-top: 0rpx;
}

.bg1 {
  width: 100%;
  height: 420rpx;
  display: block;
  position: relative;
}

.bg2 {
  width: 100%;
  display: block;
  position: absolute;
  height: 100%;
}

.container-out {
  width: 100%;
  margin: 58rpx auto;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.container-out image {
  width: 100%;
}

.tips {
  width: 92%;
  padding-left: 4%;
  padding-right: 4%;
  color: #003f7e;
  font-size: 24rpx;
  margin-bottom: 56rpx;
  margin-top: 108rpx;
}

.exchange {
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  width: 237rpx;
  height: 65rpx;
  color: #fff;
  background: rgba(1, 188, 176, 1);
  border-radius: 33px;
  line-height: 66rpx;
  text-align: center;
  position: absolute;
  bottom: 79rpx;
}

.msg {
  background-color: #ffb140;
  width: 92%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
  margin: auto;
}
