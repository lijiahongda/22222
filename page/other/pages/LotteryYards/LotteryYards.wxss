page{
  background-color: #F4F4F4FF;
}
.wrap{
  padding: 0 4%;
  box-sizing: border-box;
}
.tab-h {
  height: 90rpx;
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  z-index: 99;
  background-color: #f4f4f4;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.tab-item {
  flex: 1;
  height: 30rpx;
  line-height: 30rpx;
  display: inline-block;
  text-align: center;
  position: relative;
  font-size: 26rpx;
  border-left: 1rpx solid #666;
}
.tab-item:nth-child(1){
  border-left: none;
}
.tab-item.active {
  color: #ff6032;
}

.scoll-h {
  width: 100%;
  height: 264rpx;
  position: relative;
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
}
.scoll-h .picimg{
  width: 100%;
  height: 264rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.scoll-h .item{
  width: 100%;
  height: 100%;
  position: relative;
  left: 0;
  top: 0;
  padding: 30rpx;
  box-sizing: border-box;
}
.scoll-h .item .code{
  font-size: 36rpx;
  color: #000;
  margin-bottom: 30rpx;
}
.scoll-h .item .info{
  width: 70%;
  font-size: 30rpx;
  color: #000;
  margin-bottom: 40rpx;
  word-break:break-all;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
  text-overflow:ellipsis;

}
.scoll-h .item .codeType{
  font-size: 30rpx;
  color: #000;
  position: absolute;
  bottom: 20rpx;
  left: 30rpx;
}
.scoll-h .item .code .copy{
  color: #E74435FF;
  margin-left: 50rpx;
  font-size: 30rpx;
}
.scoll-h .item .time{
  font-size: 30rpx;
  color: #000;
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
}
.scoll-h .item .statusimg{
  width: 148rpx;
  height: 148rpx;
  font-size: 30rpx;
  color: #000;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
}
.scoll-h .item .statusimg image{
  width: 100%;
  height: 100%;
}