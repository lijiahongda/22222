/* page/other/pages/RuleDescription/RuleDescription.wxss */
page{
  width: 100%;
}
.wrap{
  width: 100%;
  box-sizing: border-box;
  position: relative;
  background-color: #E74435FF;
}
.wrap .cont{
  width: 100%;
  height: 1438rpx;
}
.picimg{
  width: 100%;
  height: 100%;
  background-color: #ececec;
}
.text{
  position: absolute;
  bottom: 30rpx;
  left: 4%;
  width: 92%;
  height: 720rpx;
  z-index: 11;
  background-color: ececec;
  color: #000;
  font-size: 26rpx;
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #fff;
}
.text .title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: block;
  text-align: center;
  font-size: 32rpx;
  color: #EA4B37FF;
}
.text .textCont{
  width: 100%;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-items: flex-start;
  color: #000;
}

.text .textCont text{
  margin-bottom: 30rpx;
  font-size: 26rpx;
  color: #000;
}