/* myProfit.wxss */

page {
  background-color: #f4f4f4;
}

.profitTop {
  height: 325rpx;
  background: #C74340;
  display: flex;
  flex-direction: column;
}

.tips {
  height: 50rpx;
  width: 92%;
  padding-left: 4%;
  padding-right: 4%;
  background-color: rgba(255, 255, 255, 0.24);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
}

.tips text {
  color: #ff6032;
}

.tips .close {
  font-size: 20rpx;
}

.ContentArea {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 96%;
  margin-left: 4%;
  margin-top: 20rpx;
}

.Explain {
  display: flex;
  flex-direction: row;
  justify-content: center;
  color: #fff;
  font-size: 22rpx;
}

.Explain .QuestionMark {
  width: 24rpx;
  height: 24rpx;
  border: 1px solid #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 24rpx;
  margin-left: 10rpx;
}

.Surplus {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  margin-right: 35rpx;
  height: 200rpx;
}

.Surplus .num {
  font-size: 60rpx;
  margin-bottom: 30rpx;
}

.ToUse {
  width: 128rpx;
  height: 60rpx;
  position: relative;
}
.ToUse image{
  width: 128rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.ToUse text{
  color: #fff;
  font-size: 28rpx;
  line-height: 57rpx;
  position: relative;
  right: -25rpx;
}
.Total {
  width: 92%;
  background-color: #fff;
  height: 140rpx;
  border-radius: 10rpx;
  position: absolute;
  top: 274rpx;
  left: 4%;
  display: flex;
  align-items: center;
  /* flex-direction: row; */
  justify-content: space-around;
}

.Total .item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 30%;
  color: #666;
  font-size: 24rpx;
}

.Total .item .num {
  color: #333;
  font-size: 34rpx;
  margin-top: 20rpx;
}
.s{
  width:2rpx;
height:36rpx;
background:#E8E8E8;
position: relative;
z-index: 99;
}
.contentList {
  width: 92%;
  background-color: #fff;
  height: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  margin: auto;
  padding-bottom: 20rpx;
  margin-top: 86rpx;
}

.tab-h {
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  height: 88rpx;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid #ededed;
  font-size: 16px;
  white-space: nowrap;
  z-index: 99;
  margin-top: 62rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.tab-item {
  margin: 0 3%;
  /* background-color: #ff6636; */
  width: 30%;
  font-size: 30rpx;
  color: #7a7a7a;
  display: inline-block;
  text-align: center;
  position: relative;
  z-index: 10000;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  /* line-height: 100rpx */
}

.tab-item.active {
  color: #182539;
}

.tab-item.active:after {
 content: "";
  display: block;
  height: 3rpx;
  width: 100%;
  background:#C74340;
  position: absolute;
  bottom: 9rpx;
  left: 5rpx;
}

.list {
  height: 124rpx;
  width: 84%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: auto;
  border-bottom: 1px solid #ededed;
}

.list .title {
  color: #333;
  font-size: 28rpx;
  margin-bottom: 22rpx;
}

.list .title text {
  overflow: hidden;
  white-space: nowrap !important;
  text-overflow: ellipsis;
  display: block;
}

.list .time {
  font-size: 22rpx;
  color: #999;
}
