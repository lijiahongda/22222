page{
  background: #ECECEC;
}
.header{
  position: relative;
  width: 100%;
  height: 420rpx;
}
.header .top-bg{
  width:100%;
  height: 250rpx;
  background: #FA937E;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
.header .top-bg-bot{
  width: 100%;
  height: 70rpx;
  border-radius: 50%;
  position: absolute;
  top: 216rpx;
  left: 0;
  z-index: 0;
  background: #FA937E;
}
.header-cont{
  position: absolute;
  left: 20rpx;
  top: 40rpx;
}
.header .serach{
  width: 710rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: #fff;
  border-radius: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #999999;
  display: flex;
  align-items: center;
}
.header .serach image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 20rpx;
}
/* 轮播 */
.header .swiper-box{
  width: 710rpx;
  margin-top: 22rpx;
  height: 300rpx;
}
.header .swiper-box .image{
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}
/* 分类 */
.class-cont{
  padding:0 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
  /* margin-bottom: 46rpx; */
}
.class-cont .class-list{
  text-align: center;
  font-size: 24rpx;
  color: #333;
  line-height: 24rpx;
}
.class-cont .class-list image{
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 24rpx;
  border-radius: 50%;

}
/* 四个块 */
.plate{
  width: 710rpx;
  height: 482rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0 auto;
}
.plate image{
  width: 354rpx;
  height: 240rpx;
  margin-right: 2rpx;
  margin-bottom: 2rpx;
}
.plate image:nth-child(2n){
  margin-right: 0rpx;
}
.plate image:nth-child(3),.plate image:nth-child(4){
  margin-bottom: 0;
  margin-top: -6rpx;
}
/* 推荐产品 */
.recommend{
  width:710rpx;
  height: 230rpx;
  padding: 26rpx 20rpx;
  box-sizing: border-box;
  margin: 0 auto;
  /* margin-top: 20rpx; */
  background: #fff;
  border-radius: 10rpx;
}
.recommend .recom-cont{
  display: flex;
}
.recommend .recom-cont .list{
  width: 25%;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}
.recommend .recom-cont .list view{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.recommend .recom-cont image{
  width: 152rpx;
  height: 74rpx;
  margin-bottom: 12rpx;
  margin-top: 28rpx;
}
.title{
  font-size: 30rpx;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight:500;
}
.title .more{
  font-size: 24rpx;
}

/* 全球馆 */
.global{
  width:710rpx;
  height:340rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  padding: 24rpx 0 30rpx 0;
  box-sizing: border-box;
}
.global .title{
  margin-left:20rpx;
  margin-bottom: 24rpx;
}
.global .swiper-block{
  width:710rpx;
  height:230rpx;
}
.global .swiper-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow:unset;
}
.global .slide-image{
  height: 180rpx;
  width: 312rpx;
  border-radius: 10rpx;
  z-index: 1;
}
.global .active{
  transform: scale(1.27);
  transition:all .2s ease-in 0s;
  z-index: 20;
}


/* 分类 */
.line-class{
  width:710rpx;
  height:78rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  line-height: 76rpx;
  font-size: 24rpx;
  color: #333;
  display: flex;
  align-items: center;
}
.line-class view{
  border-bottom: 4rpx solid #fff;
  width: 16%;
  margin: 0 2%;
  text-align: center;
}
.line-class view.active{
  border-bottom: 4rpx solid #FA937E;
}

.bot-list{
  width: 710rpx;
  margin: 20rpx auto;
  display: flex;
  flex-wrap: wrap;
}
.bot-list .list{
  width: 345rpx;
  margin-right: 20rpx;
  overflow: hidden;
  background: #fff;
  height: 540rpx;
  border-radius: 10rpx;
  padding: 14rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx
}
.bot-list .list:nth-child(2n){
  margin-right: 0;
}
.bot-list .list image{
  width: 100%;
  height: 320rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
}
.bot-list .list .name{
  font-size: 24rpx;
  color: #333;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.bot-list .list .price .vip-price{
  font-size: 26rpx;
  color: #C74340;
}
.bot-list .list .price .jd-price{
  font-size: 24rpx;
  color: #333;
  text-decoration: line-through;
}