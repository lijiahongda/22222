page{
  background: rgba(246,246,246,1);
}
.header{
  width: 100%;
  background: #FA937E;
  letter-spacing:2rpx;
}
.search{
  height: 88rpx;
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.search .search-con{
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
  background:rgba(246,246,246,1);
  border-radius:30rpx;
}
.search .search-con image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 20rpx;
}
.search .search-type{
  width: 26rpx;
  height: 26rpx;
}
.sort{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  padding:0 24rpx;
  box-sizing: border-box;
}
.sort .list{
  text-align: center;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #fff;
  line-height: 86rpx;
  border-bottom: 4rpx solid #FA937E;
  display: flex;
  align-items: center;
}
.sort .list.active{
  border-bottom: 4rpx solid #fff;
}
.sort .price-icon image{
  width: 16rpx;
  height: 8rpx;
  margin-left: 12rpx;
  display: block;
}
.sort .price-icon .price-up{
  margin-bottom: 8rpx;
}
.sort .list.screen image{
  margin-left: 8rpx;
  width: 28rpx;
  height: 28rpx;
}
/* 分类 */
.category .nav {
  height: 62rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  margin: 24rpx 0;
  margin-bottom: 0;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.category .nav-item {
  display: inline-block;
  margin-right: 42rpx;
  font-size: 28rpx;
  color: #fff;
  font-weight: 400;
  height:44rpx;
  line-height: 44rpx;
  border-bottom: 4rpx solid #FA937E;
  padding-bottom: 10rpx;
}
.category .activeChild{
  border-bottom: 4rpx solid #fff;
}


/* 暂无商品 */
.NoCommodityData{
  width: 100%;
  padding-top: 150rpx;
  text-align: center;
  font-size: 24rpx;
  color: #B3B3B3
}
.NoCommodityData image{
  width: 172rpx;
  height: 166rpx;
  margin-bottom: 44rpx;
}





/* ========= */

/* 内容区 */
/* 方 */
.ContentArea {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 18rpx 24rpx;
  justify-content: space-between;
}

.ContentArea .item {
  width: 336rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 16rpx;
  box-sizing: border-box;
  margin-right: 30rpx;
}
.ContentArea .item:nth-child(2n){
  margin-right: 0;
}
.ContentArea .item .shopImageLeft{
  position: relative;
}


.ContentArea .item image {
  width: 310rpx;
  height: 310rpx;
  border-radius: 10rpx;
  background-color: #f4f4f4;
}
.ContentArea .item .itemInfo{
  width: 98%;
  margin: 0 auto;
}
.ContentArea .item .itemInfo .title {
  color: #333;
  font-size: 24rpx;
  margin-top: 10rpx;
  margin-bottom: 28rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.ContentArea .item .itemInfo .price {
  font-size: 26rpx;
  color: #C74340;
  line-height: 36rpx;
}
.ContentArea .item .itemInfo .price .old-price{
  color: #333;
  font-size: 20rpx;
  text-decoration-line: line-through;
  margin-left: 10rpx;
}


/* --------------- */
/* 横 */
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.content .item {
  display: flex;
  flex-direction: row;
  width: 100%;
  padding: 16rpx 24rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ececec
}

.content .item .image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 14rpx;
}
.content .item .image image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  background-color: #ececec;
}

.content .item .info {
  display: flex;
  flex-direction: column;
}

.content .item .info .title text {
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333;
  margin-bottom: 18rpx;
}
.content .item .info .pricebutton {
  display: flex;
  flex-direction: row;
  color: #999;
  font-size: 24rpx;
  justify-content: space-between;
}

.content .item .info .pricebutton .price .Company {
  font-size: 26rpx;
  color: #C74340;
}
.content .item .info .pricebutton .price .OriginalPrice {
  font-size: 24rpx;
  text-decoration: line-through;
  color: #333;
  margin-left: 20rpx;
}


/* 筛选弹框 */
.black-grd{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.2);
  z-index: 1
}
.screen-shell,.screen-con{
  position: fixed;
  top: 0;
  right: 0;
  width: 538rpx;
  height: 100%;
  background: #fff;
  border-radius: 10rpx 0 0 10rpx;
  z-index: 9;
  padding: 30rpx 24rpx 0 12rpx;
  box-sizing: border-box;
}
.screen-con{
  overflow-y: auto;
  height: 90%;
  border-radius:0;
}
.screen-type .title{
  display: flex;
  align-content: center;
  justify-content: space-between;
  font-size: 30rpx;
  color: #333;
  line-height: 30rpx;
  margin-bottom: 32rpx;
}
.screen-type .title image{
  width: 24rpx;
  height: 14rpx;
  margin-top: 8rpx;
}
.screen-type .screen-list{
  display: flex;
  align-items: center;
  flex-wrap: wrap
}
.screen-type .screen-list view,.screen-type .price-input input{
  /* width: 138rpx; */
  /* padding: 0 10rpx; */
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 24rpx;
  background: rgba(235,235,235,1);
  font-size: 24rpx;
  color: #999;
  margin-right: 40rpx;
  margin-bottom: 32rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.screen-type .screen-list view.chose{
  background: #FA937E;
  color: #fff;
}
.screen-type .price-input{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 42rpx;
}
.screen-type .price-input input{
  width: 212rpx;
  margin: 0;
}
.screen-type .price-input .line{
  width: 40rpx;
  height:3rpx;
  background: rgba(153,153,153,1);
}
.screen-btn{
  position: fixed;
  bottom: 0;
  right: 0;
  display: flex;
  align-items: center;
  width: 538rpx;
  height: 10%;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.screen-btn view{
  width:212rpx;
  height:74rpx;
  line-height: 74rpx;
  text-align: center;
  border-radius:10rpx;
  font-size: 30rpx;
}
.screen-btn view.reset{
  border:2rpx solid rgba(235,235,235,1);
  background: #fff;
  color: #333;
  margin-right: 32rpx;
  margin-left: 40rpx;
}
.screen-btn view.sure{
  background:#FA937E;
  border: none;
  color: #fff;
}
