
@import "/page/LoadingPopup/LoadingPopup.wxss";
video{
  position: fixed;
  z-index: 10;
  top: 0;
  left: 0;
  width:750rpx;
  height:100%;
}
.content{
  position: fixed;
  z-index: 999;
  font-size: 30rpx;
  color: #fff;
  bottom: 0;
  width: 750rpx;
}
/* 右侧操作 */
.operation{
  width: 66rpx;
  position: absolute;
  right: 40rpx;
  bottom: 300rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  text-align: center;
  z-index: 1000;
}
.operation-like image,.operation-comment image,.operation-share image{
  width: 66rpx;
  height: 59rpx;
  margin-top: 40rpx;
}
.operation-comment image{
  height: 60rpx;
}
.operation-share image{
  height: 51rpx;
}
.operation-relase image{
  width: 60rpx;
  height: 60rpx;
  margin-top: 40rpx;
}


.content-bottom{
  position: absolute;
  bottom: 100rpx;
  left: 24rpx;
  width: 702rpx;
  z-index: 999
}
/* 发布人信息 */
.person{
  height: 110rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}
.person .person-img{
  width: 100rpx;
  height: 118rpx;
  position: relative;
  margin-right: 20rpx;
}
.person .add{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  left: 28rpx;
  bottom: 0;
  z-index: 8
}
.person .head-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1
}
.person .attention{
  width: 30rpx;
  height: 30rpx;
  margin-left:34rpx;
  margin-top:-18rpx;
}
.person .attention image{
  width: 30rpx;
  height: 30rpx;
}
/* 关联商品 */
.goods{
  width: 170rpx;
  height:51rpx;
  line-height: 51rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  background:rgba(0,0,0,0.5);
  border-radius:26rpx;
  font-size: 20rpx;
  color:#fff; 
  display: inline-block;
  margin-bottom: 41rpx;
}
.goods-cont{
  display: flex;
  align-items: center;
}
.goods-cont .goods-video{
  width: 29rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.video-des{
  font-size: 24rpx;
  color: #fff;
  line-height: 36rpx;
}


/* 第二板块商品 */
.goodsBox {
  width:420rpx;
  height:235rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  padding: 20rpx;
  position: absolute;
  bottom: 0;
  box-sizing: border-box;
}
.goodsBox .shop_title{
  font-size: 24rpx;
  color: #666666;
  line-height: 24rpx;
  margin-bottom: 20rpx;
}
.goodsDetail{
  font-size: 24rpx;
  color: #333333;
  line-height: 36rpx;
  display: flex;
  align-items: center;
}
.goodsDetail .goods-img{
  width:98rpx;
  height:98rpx;
  background:rgba(153,153,153,1);
  margin-right: 20rpx;
}
.goodsBox .goodsDetail .title{
  width: 258rpx;
  height: 64rpx;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  overflow:hidden;
}
.goodsBox .goods-bot{
  width:374rpx;
  height:48rpx;
  line-height: 48rpx;
  background:rgba(238,78,60,1);
  border-radius:10rpx;
  font-size: 26rpx;
  color: #fff;
  text-align: center;
  margin-top: 15rpx;
}

.goodsBox .closeGray{
  position: absolute;
  right: 14rpx;
  top: 14rpx;
  width: 26rpx;
  height: 26rpx;
}

.replyBottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  z-index: 20000;
  width: 750rpx;
  height: 100rpx;
  box-shadow: 0 -4px 5px rgba(0, 0, 0, 0.1);
  padding: 0 46rpx;
  background: #fff;
}
.replyBottom .section {
  width: 100%;
}
.replyBottom input {
  height: 100rpx;
  min-height: 100rpx;
}

.get-money {
  position: absolute;
  background: rgba(0, 0, 0, 0.7);
  width: 100%;
  height: 100%;
  z-index: 30000;
}
.get-money .main{
  font-size:65rpx;
font-family:PingFang SC;
font-weight:400;
text-align: center;
color:rgba(255,219,123,1);
  width: 750rpx;
  height: 920rpx;
  position: relative;
  background: url(https://image.yuelvhui.com/open/2019/10/15/5da4c742c17251571080002.png) no-repeat center;
  background-size: contain;
}
.get-money .main view{
  display: inline-block;
  margin: 70% auto 0;
}
.get-money .main view text{
  font-size: 125rpx;
}
.get-money .main image{
  width: 316rpx;
  height: 108rpx;
  margin: 3% auto 0;
  display: block;
}


/* 小红包 */

.SmallRedPopup {
  width: 83rpx;
  height: 79rpx;
  position: fixed;
  right: 24rpx;
  z-index: 10000;
  top: 779rpx;
}





/* 分享弹出层 */
/* 分享层 */
.share-layer{
  background:rgba(0,0,0,0.6);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999
}
.share-layer-cont{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 130rpx;
  background: #fff;
  text-align: center;
  z-index: 2;
}
.share-layer-block{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  background: #fff;
  text-align: center;
  z-index: 2;
  display: flex;
}
.share-layer-block-img{
  width: 100%;
  height: 100%;
  float: left;
}
.share-layer-block image{
  margin-top:21rpx;
  width:96rpx;
  height:96rpx;
  display:block;
  margin:20rpx auto;
}
.share-layer-block .name{
  margin-top:21rpx;
  height:30rpx;
  line-height:15px;
  font-size:30rpx;
}
.share-layer-block-img button{
  width:100%;
  height:100%;
  background:#fff;
  border:0;
  margin:0;
  padding:0;
  border-color:#fff;
  box-shadow:0;
}
.share-layer-block-img button::after{
  border:none;
}
