page {
  background-color: #f4f4f4;
  display: flex;
  flex-direction: column;
}

.top {
  width: 100%;
  height: 325rpx;
  background: #c74340;
  display: flex;
  flex-direction: column;
}

.ToUse {
  width: 128rpx;
  height: 60rpx;
  position: fixed;
  right: 3rpx;
  top: 45rpx;
}

.ToUse image {
  width: 128rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.ToUse text {
  color: #fff;
  font-size: 28rpx;
  line-height: 57rpx;
  position: relative;
  right: -12rpx;
}

.Total {
  width: 100%;
  height: 140rpx;
  position: absolute;
  top: 140rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.Total .item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 30%;
  color: #fff;
  font-size: 24rpx;
}

.Total .item .num {
  color: #fff;
  font-size: 34rpx;
  margin-top: 20rpx;
}

.s {
  width: 2rpx;
  height: 36rpx;
  background: #e8e8e8;
  position: relative;
  z-index: 99;
}

.con {
  padding: 0 3%;
  width: 94%;
  position: absolute;
  top: 260rpx;
  height: 170rpx;
}

.GetInstructions {
  height: 198rpx;
  width: 92%;
  padding: 0 4%;
  border-radius: 10rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.case {
  width: 92%;
  padding: 4%;
  border-radius: 10rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.GetInstructions .title {
  height: 28rpx;
  font-size: 30rpx;
  color: #1d1d1d;
  border-left: 5rpx solid #c94440;
  line-height: 28rpx;
  text-indent: 25rpx;
}

