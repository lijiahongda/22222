  display: flex;
  flex-direction: column;
  justify-content: center;
  line-height: 36rpx;
}

.case .tit {
  width: 100%;
  height: 28rpx;
  border-left: 5rpx solid #c94440;
  line-height: 28rpx;
  text-indent: 25rpx;
}

.caseContent {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #333;
  margin-bottom: 45rpx;
}

.caseContent .item {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.caseContent .item .casetitle {
  margin-top: 25rpx;
