<view class="contentInfo">
  <view class="item">
    <view class="title">
      <image class='icon' src="https://image.yuelvhui.com/pubfile/2019/09/23/line_1569223500_20340.png"></image>
      实体卡卡号
    </view>
    <input bindinput="EntityCardNum" placeholder="请输入您的卡号" placeholder-style="font-size:28rpx;color:#cacaca;" cursor="100" style='text-align: right' />
  </view>

  <view class="item">
    <view class="title">
      <image class='icons' src="https://image.yuelvhui.com/pubfile/2019/09/23/line_1569223650_46237.png"></image>
      +86</view>
    <input bindinput="phoneNum" placeholder="请输入手机号码" placeholder-style="font-size:28rpx;color:#cacaca;" style="text-align: right" />
  </view>
  <view class="item" style="border-bottom:none">
    <view class="title">
      <image class='icons' src="https://image.yuelvhui.com/pubfile/2019/09/23/line_1569223679_16045.png"></image>
      <input bindinput="verifyCode" style='width:100%;' placeholder="请输入短信验证码" class='codes' placeholder-style="font-size:28rpx;color:#cacaca;" />
    </view>
    <view class="getCode" bindtap='getCode'>{{ countdown != '60'?countdown:'获取验证码' }}</view>
  </view>
</view>
<view class="ConfirmBinding" bindtap='ConfirmBinding'>确认绑定</view>