/* page/My/pages/GroupBuy/GroupBuy.wxss */

page {
  background-color: #ececec;
}

/* tab是否置顶 */

.topnav {
  position: fixed;
  top: 0;
  z-index: 1000;
  width: 100%;
  background-color: #fff;
}

/* tab样式 */

.tab-h {
  height: 79rpx;
  width: 100%;
  box-sizing: border-box;
  line-height: 69rpx;
  font-size: 16px;
  white-space: nowrap;
  z-index: 99;
  display: flex;
  flex-direction: row;
}

.tab-h image {
  width: 40rpx;
  height: 28rpx;
}

.exploreViewList {
  width: 95%;
}


.tab-item {
  margin: 0 7.2%;
  font-size: 30rpx;
  color: #010101;
  display: inline-block;
  text-align: center;
  position: relative;
}

.tab-item.active {
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 6rpx;
  width: 100%;
  background:rgba(230,184,116,1);
  position: absolute;
  bottom: 0;
}

/* 广告 */
.Advertisement{
  width:710rpx;
  height:180rpx;
  border-radius:10rpx;
  overflow: hidden;
  margin: 0 auto;
}
.Advertisement image{
  width:710rpx;
  height:180rpx;
}

/* 补位 */

.PatchPosition {
  height: 79rpx;
  width: 100%;
}

/* 列表 */

.list {
  display: flex;
  flex-direction: column;
  width: 710rpx;
  margin: 30rpx auto 0;
  border-radius: 10rpx;
  background-color: #fff;
  color: #333;
}
.list .state-title{
  width: 710rpx;
  margin-top: 30rpx;
  padding-right: 35rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #333;
  text-align: right;
}
.list .goodinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #ececec;
  width: 100%;
  padding: 38rpx 18rpx 50rpx 37rpx;
  box-sizing: border-box;
}

.list .goodinfo .image {
  margin-right: 20rpx;
  border-radius: 30rpx;
  overflow: hidden;
  width: 147rpx;
  height: 147rpx;
}

.list .goodinfo .image image {
  width: 147rpx;
  height: 147rpx;
}

.list .goodinfo .info {
  height: 147rpx;
  display: flex;
  width: 488rpx;
}
.list .goodinfo .list-title{
  width: 320rpx;
}

.list .goodinfo .info .name {
  font-size: 28rpx;
  line-height: 48rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.list .goodinfo .info .ChannelPrice{
  color: #999;
  font-size: 28rpx;
}
.list .goodinfo .info .groupInfo{
  font-size: 30rpx;
  text-align: right;
  width: 168rpx;
}

.swiperbox{
  height: 180rpx;
  width: 94.6%;
  margin-left: 2.7%;
  border-radius: 10rpx;
}
.swiperbox image{
  width: 100%;height: 100%;
  border-radius: 10rpx
}
.list .func{
  font-size: 28rpx;
  text-align: right;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.list .func .total{
  margin: 30rpx 34rpx 0 auto;
}
.list .func .GroupBuyIngo{
  width:226rpx;
  height:60rpx;
  line-height: 60rpx;
  background:rgba(230,183,115,1);
  border-radius:10rpx;
  font-size: 28rpx;
  text-align: center;
  margin: 40rpx 34rpx 30rpx auto;
}

.show-all{
  font-size: 28rpx;
  color: #999;
  width: 750rpx;
  margin-top: 64rpx;
  text-align: center;
  margin-bottom: 30rpx;
}
.noList{
  text-align: center;
  font-size: 30rpx;
}
.noList image{
  width: 308rpx;
  height: 200rpx;
  margin: 140rpx auto 74rpx;
}