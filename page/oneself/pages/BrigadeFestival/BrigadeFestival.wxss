page{
  background-color: #fff;
}
/* 授权按钮 */
.authorizationStatus{
  position: fixed;
  z-index: 10000;
  width: 100%;
  height: 100%;
  background-color: transparent;
  top: 0rpx;
  margin-top: 0rpx
}
image{
  background-color: #e4393c;
  width: 100%;
  height:100%;
}
.ToInvite{
  position: fixed;
  /* display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center; */
  text-align: center;
  line-height: 88rpx;
  background-color: #FFB536;
  width:500rpx;
  height:88rpx;
  border-radius: 10rpx;
  color:#fff;
  font-size: 36rpx;
  bottom:48rpx;
  left:17%;
}
button[class="con_listbox"]::after {
  border: none;
}
/* 无活动 */
.invitationsNum{
  background-image: url(http://image.yuelvhui.com/pubfile/2018/11/26/line_1543220157.png);
  background-repeat: no-repeat;
  background-size:100%; 
  height: 184rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center; 
  width:95%;
  padding-left:2.5%;
  padding-right:2.5%;
}
.invitationsNum .info{
  display: flex;
  flex-direction: column;
}
.invitationsNum .info .number{
  color:#fff;
  font-size: 36rpx;
  margin-bottom:36rpx
}
.invitationsNum .info .Deadline{
  color:#fff;
  font-size: 30rpx
}
.invitationsNum .GiftPackage{
  color:#FF6032;
  background-color: #fff;
  width:162rpx;
  height:56rpx;
  border-radius: 10rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 30rpx;
}
.title{
  color:#000;
  font-size: 30rpx;
  margin-left: 2.5%;
  margin-top:30rpx;
  margin-bottom: 14rpx;
}
.item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color:#000;
  font-size: 24rpx;
  height:150rpx;
  width:95%;
  margin-left:2.5%;
  margin-right: 2.5%;
  margin-bottom: 16rpx;
  box-shadow: 0px 0px 0.2px #ccc;
  border-radius: 10rpx
}
.item .itemleft{
  display: flex;
  flex-direction: row;
  width:60%;
  height: 150rpx;
  align-items: center;
}
.item .itemleft image{
  background-color: #e4393c;
  border:1px solid #FFB536;
  height:80rpx;
  width:80rpx;
  border-radius: 50%;
  margin-right:20rpx;
  margin-left:18rpx;
}
.item .itemRight{
  width:38%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding-right:2%;
}