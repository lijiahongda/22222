page{
  font-family:PingFang SC;
  min-height: 100%;
  background: #F6F6F6;
}
.header{
  width: 100%;
  height: 290rpx;
  background-image: url(https://yuetao-1300766538.cos.ap-beijing.myqcloud.com/yuetao/image/2020-04-24/18/yuelvhuih3XKGt9O9N1587723112.png);
  background-size: 100% 100%;
  text-align: center;
  color: #fff;
  padding-top: 1rpx;
}
.header > view:nth-child(1){
  font-size: 26rpx;
  line-height: 1;
  margin-top: 55rpx;
  color: #999;
}
.header .nowValue{
  color: #F8ECD1;
  font-size: 68rpx;
  line-height: 1;
  margin-top: 16rpx;
}
.header .poorValue{
  width:424rpx;
  height:48rpx;
  background:rgba(4,3,3,1);
  border-radius:24rpx;
  margin: 0 auto;
  margin-top: 44rpx;
  text-align: center;
  line-height: 48rpx;
  color: #999999;
  font-size: 24rpx;
}
.header .rules{
  width:165rpx;
  height:60rpx;
  background:rgba(248,236,209,1);
  box-shadow:0px 5rpx 15rpx 0px rgba(4,3,3,0.3);
  border-radius:30rpx 0px 0px 30rpx;
  position: absolute;
  right: 0;
  top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #855C1D;
  font-size: 24rpx;
  padding-right: 10rpx;
  box-sizing: border-box;
}
.header .rules > image{
  width: 40rpx;
  height: 40rpx;
}
