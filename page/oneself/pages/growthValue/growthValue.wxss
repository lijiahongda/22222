.white{
  text-align: center;
  color: #999999;
  font-size: 24rpx;
}
.white > image{
  width: 492rpx;
  height: 344rpx;
  display: block;
  margin: 57rpx auto 16rpx auto;
}
.list{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx 24rpx;
  box-sizing: border-box;
}
.list .headerTitle{
  color: #666666;
  font-size: 26rpx;
  line-height: 1;
}
.list .detail{
  width: 100%;
  height: 130rpx;
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}
.list .detail > image{
  width: 130rpx;
  height: 130rpx;
  margin-right: 20rpx; 
}
.list .detail .middle .title{
  width: 414rpx;
  line-height: 1;
  color: #141414;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list .detail .middle .price{
  color: #666666;
  font-size: 24rpx;
  line-height: 1;
}
.list .detail .middle .price text:last-child{
  color: #333333;
  font-size: 34rpx;
}
.list .detail .right{
  text-align: right;
}
.list .detail .right > view:nth-child(1){
  color: #CA2519;
  font-size: 36rpx;
  line-height: 1;
  margin-bottom: 30rpx;
}
.list .detail .right > view:nth-child(2){
  color: #999999;
  font-size: 24rpx;
  line-height: 1;
}
.nomore{
  width: 100%;
  margin: 60rpx 0;
  text-align: center;
  color: #999999;
  font-size: 24rpx;
}
.rulesDetail{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
  background: rgba(0, 0, 0, .66);
}
.rulesDetail > view{
  margin: 0 auto;
  margin-top: 12vh;
  width:600rpx;
  background:rgba(255,255,255,1);
  border-radius:18rpx;
  padding: 0 36rpx;
  box-sizing: border-box;
}
.rulesDetail .title{
  width: 100%;
  height: 113rpx;
  line-height: 113rpx;
  color: #141414;
  font-size: 32rpx;
  text-align: center;
}
.rulesDetail .rulesList{
  color: #141414;
  font-size: 28rpx;
}
.rulesDetail .footer{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 24rpx;
  color: #666666;
  text-align: center;
}
.rulesDetail > image{
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  display: block;
}
