page {
  height: 100%;
}

.backgroundImage {
  background-color: #e4393c;
  background-size: 100%;
  background-repeat: no-repeat;
  /* background-size: 100% 100%; */
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content .name {
  font-size: 48rpx;
  color: #fff;
  margin-top: 80rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
}

.content image {
  width: 203rpx;
  height: 203rpx;
  margin-bottom: 21rpx;
}

.content .copy {
  width: 57rpx;
  height: 26rpx;
  border: 1px solid rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 14rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  margin-left: 37rpx
}

.content {
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 0rpx;
  width: 92%;
  padding-left: 4%;
  padding-right: 4%;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  padding-bottom: 11rpx;
}

.content .info {
  display: flex;
  flex-direction: row;
  margin-top: 53rpx;
  align-items: center;
}

.isname {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 28rpx;
}

.tips {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  margin-left: 32rpx;
}

.content .info .HeadPortrait {
  width: 101rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #efefef;
  margin-bottom: 0;
  margin-right: 13rpx;
}

.content .share {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.content .sharecode {
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}
