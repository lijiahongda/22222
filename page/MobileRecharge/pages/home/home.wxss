/* page/MobileRecharge/pages/home/home.wxss */
.page{
  border-top: 1px solid rgba(221,221,221,1);
  background: #fff;
  width: 100%;
  height: 100%;
}
.page-header{
  width: 690rpx;
  margin: 0 auto;
  padding-top: 50rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid rgba(221,221,221,1);
}
.page-header input{
  height:32rpx;
  font-size:42rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(1,1,1,1);
}

.page-body{
  width: 690rpx;
  margin: 0 auto;
  padding-bottom: 120rpx;
}
.page-body text{
  display: block;
margin-top: 29rpx;
font-size:26rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(102,102,102,1);
}
radio-group{
  display: flex;
justify-content: space-around;
 flex-wrap: wrap;
 padding: 20rpx 0;
}
radio-group:after{
    flex: auto;
    content: "";
}
label.radio{
  width: 221rpx;
  height: 120rpx;
  display: flex;
  background: url(https://image.yuelvhui.com/pubfile/2019/10/12/line_1570869564_74289.png) no-repeat center;
  background-size: contain;
/* border-radius:10px; */
margin-bottom:10rpx;
}
radio{
  width: 100%;
  text-align: center;
  position: relative;
}
.radio[aria-checked='true']{
  background-image: url(https://image.yuelvhui.com/pubfile/2019/10/12/line_1570869722_34785.png);
}

radio .wx-radio-input{
  display: none;
}
label.radio text{
  text-align: center;
  font-family:PingFang SC;
  font-weight:400;
  margin-top: 0;
color:rgba(252,74,75,1);
}
label.radio text.title{
  font-size:36rpx;
  line-height: 75rpx;
}
label.radio text.info{
  font-size:26rpx;
}

.page-footer button{
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  width:690rpx;
  height:88rpx;
  background:rgba(252,74,75,1);
  border-radius:10rpx;
  display: block;
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
}
