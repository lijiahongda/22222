/* page/yueMember/pages/modification/modification.wxss */

page {
  background: #fff;
}

.tab-h {
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  font-size: 16px;
  border-bottom: 2rpx solid #ececec;
}

.tab-item {
  width: 49%;
  display: inline-block;
  text-align: center;
  color: #333;
  font-size: 28rpx;
  position: relative;
}

.tab-item.active {
  color: #fa937e;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 4rpx;
  width: 33%;
  left: 34%;
  background: #fa937e;
  position: absolute;
  bottom: 3rpx;
}

.codes {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 9%;
}

.erCode {
  width: 300rpx;
  height: 300rpx;
  background: #f6f6f6;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.add {
  color: rgba(190, 190, 190, 1);
  font-size: 95rpx;
  position: absolute;
  top: 28%;
}

.code {
  width: 300rpx;
  height: 300rpx;
}

.load {
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
  margin-top: 4%;
}

.num {
  padding: 0 5%;
  display: flex;
  flex-direction: column;
  margin-top: 15%;
}

.inp {
  background: 0;
  text-indent: 15rpx;
}

.line {
  border: 1rpx solid rgba(51, 51, 51, 1);
  width: 100%;
  margin-top: 3%;
}

.inp::-webkit-input-placeholder {
  color: rgba(51, 51, 51, 1);
}

.warning {
  color: rgba(153, 153, 153, 1);
  font-size: 26rpx;
  margin-top: 3%;
  padding: 0 3%;
}

.save {
  width: 702rpx;
  height: 80rpx;
  background: rgba(250, 147, 126, 1);
  border-radius: 40rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
  margin-top: 42%;
  margin-left: 3%;
}
