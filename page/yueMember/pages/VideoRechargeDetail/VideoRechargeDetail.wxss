/* page/yueMember//pages/VideoRechargeDetail/VideoRechargeDetail.wxss */

page {
  background-color: #fff;
}

.RechargeAPP {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 91rpx;
  padding-left: 3.7%;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 38rpx;
}

.RechargeAPP image {
  margin-right: 27rpx;
  height: 72rpx;
  width: 72rpx;
}

.RechargeableAccount {
  padding-left: 3.7%;
  display: flex;
  flex-direction: column;
  height: 180rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(126, 126, 126, 1);
}

.RechargeableAccount .title {
  margin-bottom: 54rpx;
}

.RechargeableAccount input {
  font-size: 46rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(16, 16, 16, 1);
  margin-bottom: 30rpx;
}

.borderbottom {
  border: 1px solid #eee;
  margin-left: 3.7%;
  margin-right: 3.7%;
  width: 92.6%;
  margin-bottom: 17rpx;
}

.tips {
  padding-left: 3.7%;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(126, 126, 126, 1);
  margin-bottom: 56rpx;
}

.DenominationTitle {
  padding-left: 3.7%;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 46rpx;
}

.Denomination {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  padding-left: 0.7%;
  width: 99.3%;
}

.Denomination .item {
  width: 190rpx;
  height: 240rpx;
  border-radius: 10rpx;
  border: 1px solid #ececec;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 35rpx;
  margin-left: 2.5%;
  margin-right: 4.5%;
  position: relative;
}

.Denomination .item .time {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(1, 1, 1, 1);
  margin-bottom: 28rpx;
  margin-top: 21rpx;
}

.Denomination .item .price {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 600;
  color: rgba(236, 176, 97, 1);
  margin-bottom: 17rpx;
}

.Denomination .item .OrignalPrice {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(1, 1, 1, 1);
}

.Denomination .Recommend {
  background: rgba(254, 247, 237, 1);
  border: 1px solid rgba(237, 177, 97, 1);
  border-radius: 10rpx;
  position: relative;
}

.Denomination .Recommend .furiousRush {
  width: 100%;
  height: 60rpx;
  background: linear-gradient(267deg, rgba(230, 183, 115, 1), rgba(243, 210, 150, 1));
  border-radius: 0px 0px 8rpx 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 0;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.label {
  width: 100rpx;
  height: 30rpx;
  background: rgba(255, 110, 58, 1);
  border-radius: 20rpx 0px 20rpx 0px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  position: absolute;
  top: -15rpx;
  left: -3rpx;
}

.Denomination .Active {
  border: 1px solid rgba(237, 177, 97, 1);
}

.pay {
  width: 92%;
  margin-left: 4%;
  height: 88rpx;
  background: linear-gradient(0deg, rgba(205, 159, 94, 1), rgba(247, 214, 164, 1));
  border-radius: 44rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 600;
  color: rgba(87, 47, 0, 1);
  position: fixed;
  bottom: 16rpx;
}

.pay text {
  font-size: 24rpx;
  margin-left: 20rpx;
}
