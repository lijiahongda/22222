  color: #fff;
}

.commodity_attr_boxlong {
  width: 100%;
  overflow: hidden;
  position: fixed;
  left: 0;
  top: 28%;
  z-index: 2000;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.commodity_attr_boxlong .close {
  width: 68rpx;
  height: 68rpx;
  margin-bottom: 41rpx;
  margin-left: 62%;
}

.commodity_attr_boxlong .content {
  width: 70.6%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 20rpx;
  height: 293rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(20, 20, 20, 1);
}

.commodity_attr_boxlong .content .sure {
  width: 250rpx;
  height: 80rpx;
  background: rgba(255, 51, 0, 1);
  border-radius: 40rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 68rpx;
}
