/* component/giftPop.wxss */

.popup {
  z-index: 9;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 20rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%);
  overflow: hidden;
  background: rgba(250, 250, 250, 1);
}

.popup-title {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  font-size: 40rpx;
  border-bottom: 2rpx solid red;
}

.popup-con {
  margin: 36rpx 10rpx;
  text-align: center;
}

.popup-btn {
  display: flex;
  justify-content: space-around;
}

.popup-btn text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 106rpx;
  border-top: 2rpx solid #ededed;
}

.popup-btn .btn-no {
  border-right: 2rpx solid #ededed;
}

.pop-title {
  font-size: 44rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(20, 20, 20, 1);
  line-height: 90rpx;
}

.Coupon-box {
  width: 520rpx;
  height: 140rpx;
  margin: 30rpx auto;
  border-radius: 18rpx;
  display: table;
  color: #fff;
  padding: 0 20rpx
}

.Coupon-left {
  display: table-cell;
  vertical-align: middle;
  width: 34%;
}
.desc{
  max-width: 150rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.center{
  width:4rpx;
  height:84rpx;
  background:rgba(255,255,255,1);
  margin-right: 20rpx;
  vertical-align: middle;
  margin-top:30rpx; 
}
.coupon-money text {
  font-size: 60rpx;
}

.Coupon-right {
  display: table-cell;
  vertical-align: middle;
  text-align: left;
  line-height: 60rpx;
}

.coupon-where {
  font-size: 26rpx;
  text-align: left;
}

.coupon-time {
  font-size: 20rpx;
}

.user-btn {
  width: 88rpx;
  height: 37rpx;
  line-height: 37rpx;
  text-align: center;
  border: 2rpx solid rgba(255, 255, 255, 1);
  border-radius: 19rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  margin-right: 10rpx;
  color: rgba(255, 255, 255, 1);
}

.coupon-btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.imgClose{
  width: 100%;
  position: absolute;
  top:85%;
}
.close{
  display: block;
  margin: 0 auto;
  width: 62rpx;
  height: 62rpx;
}