.openMember {
  width: 100%;
  height: 120rpx;
  background: #fff;
}

.openMember image {
  width: 700rpx;
  height: 100rpx;
  display: block;
  margin: 0 auto;
  padding: 10rpx 0;
}

.title {
  width: 100%;
  height: auto;
  background: #fff;
  border-radius: 0px 0px 18rpx 18rpx;
  padding: 0 28rpx 32rpx 24rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.title .titleDetail {
  width: 100%;
  line-height: 42rpx;
  color: #141414;
  font-size: 28rpx;
  font-weight: 500;
}
.titleDetailH{
  width: 100%;
  line-height: 42rpx;
  color: #141414;
  font-size: 28rpx;
  font-weight: 500;
  padding-top: 30rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.det{
  margin-top: 20rpx;
  color: #666666;
  font-size:24rpx;
}
.det text{  
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}
.title .titleDetail image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.title .titleDetailH image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.title .titleDetail text {
  vertical-align: middle;
}

.title > text {
  vertical-align: middle;
  line-height: 34rpx;
  color: #666;
  font-size: 24rpx;
  padding-top: 16rpx;
  display: block;
}

.reason {
  width: 100%;
  height: auto;
  padding: 20rpx 24rpx 33rpx 24rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.reason > view {
  background: #f9faff;
  border-radius: 16rpx;
  padding: 22rpx 36rpx 20rpx 20rpx;
  box-sizing: border-box;
  width: 100%;
  color: #ca2519;
  font-size: 24rpx;
  line-height: 36rpx;
}

.reason > view > text {
  vertical-align: middle;
}

.reason > view > text:last-child {
  color: #141414;
}

.rule {
  display: flex;
  justify-content: space-between;
  background: rgba(255, 224, 221, 1);
  font-size: 24rpx;
  color: #ca2519;
  padding: 23rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.ruleOne {
  display: flex;
}

.ruleOne image {
  width: 28rpx;
  height: 28rpx;
}

.ruleTwo {
  width: 17rpx;
  height: 28rpx;
  margin-top: 5rpx;
}

.left {
  margin: 0 20rpx;
  font-size: 26rpx;
}

.center {
  width: 2rpx;
  height: 30rpx;
  background: rgba(234, 169, 164, 1);
  margin-right: 20rpx;
  margin-top: 5rpx;
}

.commodity_screen {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  top: 0;
  left: 0;
  z-index: 1000;
}

.con {
  width: 520rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 18rpx;
  margin: 317rpx 75rpx 0 75rpx;
  padding: 40rpx 40rpx 100rpx 40rpx;
}
.tit{
  text-align: center;
  margin-bottom: 60rpx;
}
.close{
  width: 80rpx;
  height: 80rpx;
  margin: 38rpx auto;
  display: block;
}