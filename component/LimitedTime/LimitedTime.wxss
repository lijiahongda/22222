/* page/Yuemall/pages/HalfPrice/HalfPrice.wxss */

page {
  background-color: #f6f6f6;
}


/* 授权按钮 */

.authorizationStatus {
  position: fixed;
  z-index: 10000;
  width: 100%;
  height: 100%;
  background-color: transparent;
  top: 0rpx;
  margin-top: 0rpx;
}

/* 专属推荐 */
.exclusive{
  width:702rpx;
  background:rgba(255,255,255,1);
  border-radius:18rpx;
  margin: 20rpx auto;
  padding: 20rpx;
  box-sizing: border-box;
}
.exclusive .header{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.exclusive .header .title{
  font-size: 30rpx;
  color: #141414;
}
.exclusive .header .choose{
  font-size: 26rpx;
  color: #C9261A;
  display: flex;
  align-items: center;
}
.exclusive .header .choose .image{
  width: 32rpx;
  height: 27rpx;
  margin-right: 6rpx;
}
.exclusive .ex_list{
  display: flex;
  align-items: center;
}
.exclusive .ex_list .list_cont{
  width: 152rpx;
  margin-right: 16rpx;
  text-align: center;
}
.exclusive .ex_list .list_cont:nth-child(4n){
  margin-right: 0rpx;
}
.exclusive .ex_list .list_cont image{
  width: 152rpx;
  height: 152rpx;
  margin-bottom: 20rpx;
  background: url(https://yuetao-1300766538.cos.ap-beijing.myqcloud.com/yuetao/image/2019-12-19/14/yuelvhuiU8Luv9ia7f1576736515.png);
  background-size: 152rpx 152rpx;
}
.exclusive .ex_list .list_cont .price{
  font-size: 24rpx;
  color: #C82519;
  font-weight: 500;
}
.exclusive .ex_list .list_cont .old_price{
  text-decoration: line-through;
  color: #BBBBBB;
  font-size: 26rpx;
}



.content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-left: 3%;
  padding-right: 3%;
  width: 94%;
}
.list {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 18rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  height: 280rpx;
  width: 100%;
}
.list .image {
  width: 280rpx;
  height: 280rpx;
  margin-right: 20rpx;
  background: url(https://yuetao-1300766538.cos.ap-beijing.myqcloud.com/yuetao/image/2019-12-19/14/yuelvhuiU8Luv9ia7f1576736515.png);
  background-size: 280rpx 280rpx;
}
.list .info {
  width: 56%;
}
.list .info .title {
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 30rpx;
  line-height: 44rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #141414;
}
.list .info .title .discount{
  width: 70rpx;
  height: 34rpx;
  background: url(https://yuetao-1300766538.cos.ap-beijing.myqcloud.com/yuetao/image/2019-12-19/15/yuelvhui0vs7XzNbaA1576738950.png);
  background-size: 70rpx 34rpx;
  text-align: center;
  line-height: 34rpx;
  color: #fff;
  font-size: 24rpx;
  display: inline-block;
}
.list .info .describe {
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 24rpx;
  line-height: 24rpx;
  margin: 16rpx 0;
  font-family: PingFangSC-Regular;
  font-weight: 500;
  color: #999;
  height: 24rpx;
}
.list .info .coupon{
  padding: 0 10rpx;
  height:36rpx;
  line-height: 36rpx;
  border:2rpx solid rgba(200,37,25,1);
  border-radius:8rpx;
  font-size: 22rpx;
  color: #C82519;
  text-align: center;
  display: inline-block;
  margin-bottom: 30rpx;
}
.list .info .pricebutton {
  display: flex;
  flex-direction: row;
  color: #999;
  font-size: 24rpx;
  justify-content: space-between;
}
.list .info .pricebutton .price .Company {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #C82519;
}

.list .info .pricebutton .price text {
  font-size: 38rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #C82519;
}

.list .info .pricebutton .price .OriginalPrice {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  text-decoration: line-through;
  color: #BBBBBB;
  margin-left: 24rpx;
}

.list .info .pricebutton .button {
  width: 180rpx;
  height: 56rpx;
  background: rgba(255, 102, 54, 1);
  border-radius: 28px;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 56rpx;
  text-align: center;
}

.isHaveMore {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 40rpx;
  margin-bottom: 95rpx;
}
