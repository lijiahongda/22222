/* page/Mall/pages/BargainPriceList/BargainPriceList.wxss */

/* 轮播 */
page{
  background-color: #f6f6f6
}

.bg {
  width: 100%;
  height: 224rpx;
}

.swiper-box {
  width: 93.6%;
  margin-left: 3.2%;
  height: 250rpx;
  margin-top: -179rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.swiper-box image {
  width: 100%;
  height: 250rpx;
  display: block;
  border-radius: 20rpx;
}

/* 授权按钮 */

.authorizationStatus {
  position: fixed;
  z-index: 10000;
  width: 100%;
  height: 100%;
  background-color: transparent;
  top: 0rpx;
  margin-top: 0rpx;
}

.goodInfo {
  width: 702rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 18rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.goodInfo image {
  width: 243rpx;
  height: 243rpx;
  margin-right: 38rpx;
  background: url(https://yuetao-1300766538.cos.ap-beijing.myqcloud.com/yuetao/image/2019-12-19/14/yuelvhuiU8Luv9ia7f1576736515.png);
  background-size: 243rpx 243rpx;
}
.goodInfo .info {
  display: flex;
  flex-direction: column;
}
.goodInfo .info .title text {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #141414;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 40rpx;
}
.goodInfo .info .groupInfo {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.goodInfo .info .groupInfo .price {
  font-size: 38rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #C82519;
}
.goodInfo .info .groupInfo .price text {
  font-size: 24rpx;
}

.goodInfo .info .OriginalPrice {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  text-decoration: line-through;
  color: #BBBBBB;
  margin-left: 10rpx;
}

.ClusteringNum {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.ClusteringNum .num {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #955C02;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width:120rpx;
  height:56rpx;
  background:linear-gradient(90deg,rgba(250,226,118,1),rgba(248,235,160,1));
  border-radius:28rpx 0px 0px 28rpx;
}

.ClusteringNum .OpeningRegiment {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width:140rpx;
  height:56rpx;
  background:linear-gradient(126deg,rgba(250,45,60,1),rgba(255,115,128,1));
  box-shadow:0px 5rpx 15rpx 0px rgba(252,92,105,0.2);
  border-radius:28rpx;
  margin-left: -18rpx;
}
.isHaveMore {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 40rpx;
  margin-bottom: 95rpx;
}
