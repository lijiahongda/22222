.Recommend {
  width: 94%;
  padding-left: 3%;
  padding-right: 3%;
  /* padding-top: 30rpx; */
  padding-bottom: 8rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.Recommend .content{
  width: 49%;
}
.Recommend .content .list {
  width: 100%;
  margin-bottom: 16rpx;
  background-color: #fff;
  border-radius: 18rpx;
  overflow: hidden;
}
.Recommend .content .list image {
  width: 100%;
  height: 342rpx;
  margin-bottom: 14rpx;
}
.Recommend .content .list .name {
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #191919;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 38rpx;
}
.Recommend .content .list .two_name{
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
.Recommend .content .list .coupon{
  padding: 0 10rpx;
  height: 36rpx;
  line-height: 36rpx;
  border:2rpx solid rgba(200,37,25,1);
  border-radius:8rpx;
  text-align: center;
  font-size: 22rpx;
  color: #C82519;
  display: inline-block;
  margin-left: 20rpx;
  margin-top: 10rpx;
  font-family:PingFang SC;
  font-weight:500;
}
.Recommend .content .list .price {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  font-size: 38rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #C82519;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.Recommend .content .list .price .OriginalPrice {
  text-decoration: line-through;
  font-size: 26rpx;
  color: #BBBBBB;
  margin-left: 10rpx;
}

